/* pages/details/details.wxss */
/* top */
.book-details{
  padding: 20rpx 20rpx 40rpx;
  border-bottom: 4rpx solid #888;
}
.book-details .book-t{
  display:  flex;
  justify-content: space-between;
}
.book-details .book-t image{
  width: 250rpx;
  height: 300rpx;
}
.book-details .book-t .main-msg{
  font-size: 12px;
  color: #888;
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
/*  */
.book-details .book-t  .title{
  font-size: 14px;
  color: #333;
  font-weight: bold;
}
.book-b{
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
}
.book-b .btn{
  margin: 0;
  width: 280rpx;
  font-size: 12px;
  background-color: #ccc;
  border: 1px solid #ccc;
}
/* 简介 */
.book-desc{
  padding:  20rpx 20rpx 30rpx;
  font-size: 12px;
  line-height: 1.5;
}
.book-desc .desc-mian{
  font-size: 12px;
  color: #333;
  padding: 20rpx 0 30rpx;
  border-bottom: 2px solid #e9e9e9;
}
.book-desc .title{
  font-weight: bold;
  font-size: 15px;
}
/* 目录 */
.book-catalog{
  border-bottom: 2px solid #e9e9e9;
  line-height: 70rpx;
  height: 70rpx;
  display: flex;
  padding: 0 20rpx 18rpx 20rpx;
  justify-content: space-between;
}
.book-catalog .catalog-l{
  width: 300rpx;
  display: flex;
  justify-content: space-between;

}
.book-catalog .catalog-l .title{
  font-size: 13px;
  font-weight: bold;
  color: #333;
}
.catalogs{
  font-size: 12px;
  color: #444;
}
.updata-time{
  font-size: 10px;
color: #444;
}
/* 底部按钮 */
.book-btn-wrap{
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 20rpx;
  box-shadow: 0 0 2px 2px rgba(0, 0, 0, .2);
}
.book-btn-wrap .b-btn{
  color: #fff;
  background-color: skyblue;
}