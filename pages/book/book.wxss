/* pages/book/book.wxss */

@import '/towxml/style/main.wxss';
@import '/towxml/style/theme/light.wxss';
@import '/towxml/style/theme/dark.wxss';
@import '/static/iconfont/iconfont.wxss';

.menu{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 998;
  background: #fff;
  display: flex;
  justify-content:space-between;
  line-height: 100rpx;
  height: 100rpx;
  border-top: 1px solid #f1f1f1;
}
.menu .iconfont{
  flex: 1;
  text-align: center;
  font-size: 20px;
}
.catalog-menu .catalog-item:active{
  background: #e9e9e9;
}
.catalog-menu{
  position: fixed;
  left: 0;
  top: 0;
  bottom:0;
  padding-bottom: 100rpx;
  width: 660rpx;
  z-index: 996;
  border: 1px solid #f1f1f1;
}
.catalog-menu .catalog-item{
  font-size: 12px;
  color: #333;
  line-height: 2.5;
  padding-left: 20rpx;
  background: #fff;
}
.mask{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 888;
  background: rgba(0, 0, 0, .2);
}
