/* pages/ours/ours.wxss */
.ours{
  background-color: blueviolet;
  display: flex;
  flex-direction: column;
  color: white;
}
.img{
  margin: 80rpx 100rpx 0;
  width: 110rpx;
  height:110rpx;
  background: #e9e9e9;
  border: 1px solid blue;
  border-radius: 50%;
}
.btm{
  margin: 50rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.btm .collect{
  text-align: center;
  display: flex;
  flex-direction: column;
}
.btn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.btn:active{
  background: gray;
}




